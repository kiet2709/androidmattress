<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_orderAdmin"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="10"
        android:orientation="horizontal" >


        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6"
            android:weightSum="3"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_orderDateAdmin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="12/05/2023"
                android:padding="6dp"
                android:textColor="@color/black"
                android:textSize="25sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_sumOrder"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="Sum: "
                    android:textColor="@color/black"
                    android:padding="6dp"
                    android:textSize="28sp" />
                <TextView
                    android:id="@+id/txt_numberSumOrderAdmin"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:text="50$"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    android:textSize="28sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="390dp"
                android:weightSum="3"
                android:layout_height="60dp">
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btn_prevAdmin"
                    android:backgroundTint="@color/trans"
                    android:src="@drawable/arrow_back"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btn_nextAdmin"
                    android:backgroundTint="@color/trans"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:layout_height="match_parent" />
                <ImageButton
                    android:id="@+id/btn_delAdmin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/trans"
                    android:src="@drawable/delete"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>