<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="30dp"
        android:text="Welcome to Ecommerce"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white2"
        android:text="Lorem ipsum dolor sit amet, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:textColor="@color/white2"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/white2"
        android:layout_marginHorizontal="30dp"
        android:hint="Email" />
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:textColor="@color/white2"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/white2"
        android:layout_marginHorizontal="30dp"
        android:hint="Password" />
    <Button
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:textSize="19sp"
        android:textColor="@color/white2"
        android:layout_marginHorizontal="30dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.25"
            android:textSize="15sp"
            android:gravity="left"
            android:textColor="@color/white3"
            android:layout_height="wrap_content"
            android:text="Forgot password?" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:gravity="right"
            android:textSize="15sp"
            android:textColor="@color/white3"
            android:layout_height="wrap_content"
            android:text="Register?" />

    </LinearLayout>


</LinearLayout>