<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textStyle="bold"

        android:layout_marginHorizontal="30dp"
        android:text="KOKO"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="@color/white2"

        android:layout_marginHorizontal="30dp"
        android:text="Register"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/white2"
        android:text="Welcome to KOKO!" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_RUsername"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:textColor="@color/white2"
                android:layout_marginTop="25dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/white2"
                android:layout_marginHorizontal="30dp"
                android:hint="Username" />
            <EditText
                android:id="@+id/edt_REmail"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:textColor="@color/white2"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/white2"
                android:layout_marginHorizontal="30dp"
                android:hint="Email" />
            <EditText
                android:id="@+id/edt_RPassword"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:textColor="@color/white2"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/white2"
                android:layout_marginHorizontal="30dp"
                android:hint="Password" />
            <EditText
                android:id="@+id/edt_RFirstName"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:textColor="@color/white2"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/white2"
                android:layout_marginHorizontal="30dp"
                android:hint="FirstName" />
            <EditText
                android:id="@+id/edt_RLastName"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:textColor="@color/white2"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/white2"
                android:layout_marginHorizontal="30dp"
                android:hint="LastName" />
            <EditText
                android:id="@+id/edt_RPhone"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:textColor="@color/white2"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/white2"
                android:layout_marginHorizontal="30dp"
                android:hint="Phone Number" />
            <EditText
                android:id="@+id/edt_RBirthday"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:textColor="@color/white2"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/white2"
                android:layout_marginHorizontal="30dp"
                android:hint="Birthday" />
            <EditText
                android:id="@+id/edt_RAddress"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:textColor="@color/white2"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/white2"
                android:layout_marginHorizontal="30dp"
                android:hint="Address" />
            <Button
                android:id="@+id/btn_RRegister"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Register"
                android:textSize="19sp"
                android:textColor="@color/white2"
                android:layout_marginHorizontal="30dp"
                android:background="@color/blue" />

            <TextView
                android:id="@+id/txt_RLogin"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white3"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Login?" />
        </LinearLayout>
    </ScrollView>




</LinearLayout>